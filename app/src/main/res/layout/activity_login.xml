<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="30dp"
        android:src="@drawable/loginpic"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quote"
        android:text="'So many books,So less time'"
        android:textAlignment="center"
        android:layout_below="@+id/image"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_text"
        android:layout_below="@+id/quote"
        android:text="TLorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="#979292"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginBottom="30dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="107dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/signin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/googleicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/logogoogle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/googleicon"
                android:padding="10dp"
                android:text="Sign in with Google" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>